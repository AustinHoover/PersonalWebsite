{
    "compilerOptions": {
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
        ],
        "sourceMap": true,
        "jsx": "react",
        "allowJs" : true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}